<% include header %>
		<% var previous_id = ""; %>
		<div class="ui grid container">
			<div class="ui vertical menu">
		<form >
			<div class="item">
				<div class="header">Filtrer: </div>
					<div class="menu">
					<label class="item" for="age"> Age minimun: </label>
					<center>
					<input type="number"  name="age_min" value="0" min="0" max="99" required>
					</center>
						<br/>
						<label class="item" for="age">Age maximun: </label>
					<center>
						<input type="number"  name="age_max" value="99" min="0" max="99" required>
					</center>
				</div>
			</div>
			<div class="item">
				<div class="header">popularité:</div>
					<div class="menu">
						<label class="item" for="pop_min"> popularité minimun: </label>
						<center>
							<input type="number" id="pop_min" name="pop_min" value="0" min="0" max="599" required>
						</center>
						<br/>
						<label class="item" for="pop_max">popularité maximun: </label>
						<center>
							<input type="number"  name="pop_max" value="99" min="0" max="599" required>
						</center>
					</div>
					</div>
				<div class="item">
					<div class="header">Ville:</div>
					<div class="field">
						<input type="text" id="city" name="city">
					</div>
				</div>
				<div class="item">
				</div>
					<center>
					<button value="search" name="form" id="buttonpad" type="submit" class="ui blue labeled submit icon button">
						<i class="search icon"></i>Rechercher
					</button>
					</center>
		</form>
						<div class="item">
					<div class="header">hashtag: </div>
					<div class="menu">
					<div class="field">
					<form>
					<center>
						<input type="text" id="hashtag" name="hashtag">
					</center>
					</div>
					</div>
					<center>
					<button value="search_hashtag" name="form" id="buttonpad" type="submit" class="ui blue labeled submit icon button" style="margin-top:20px;">
						<i class="search icon"></i>Rechercher
					</button>
					</center>
					</form>
				</div>
  </div>
			<% if (user_profile) { %>
			<% for (user_profile of user_profile) { %>
			<% if (user_profile.id !== previous_id &&  user_profile.picture && user_profile.id !== myid && (user_profile.gender == match_g || match_g == "all")) { %>
				<div class="four wide column">
					<div class="ui link cards">
						
						<div class="card">
							<% if (user_profile.picture) { %>
								<div class="image profile">
									<img id="image_profile" src="/assets/images/user_image/<%= user_profile.picture %>">
								</div>
							<% } %>
							<div class="content">
								<a class="header" href="/show/<%= user_profile.id %>">
								<i class="<%= user_profile.gender %> icon"></i>
								<%= user_profile.pseudo %>
								</a>
								<div class="meta">
									<% if (  user_profile.age ) { %>
										<span class="date"><%= user_profile.age %> ans</span>
									<% } %>
								</div>
								<div class="description">
									<%= user_profile.bio %>
								</div>
							</div>
							<div class="extra content">
								<div class="ui divided items">
									<% if (  user_profile.city ) { %>
										<a>
										<i class="marker icon"></i>
										<%= user_profile.city %>
										</a>
									<% } %>
									<br/>
									<% if (user_profile.isconnected == 1) { %>
									<div class="item">
										<p><i class="green circle icon"></i>En ligne</p>
									</div>
									<% } %>
									<% if (user_profile.isconnected == 0) { %>
									<div class="item">
										<p><i class="red circle icon"></i>Hors ligne</p>
									</div>
									<% } %>
									<a > Popularité: <%= user_profile.populaire %> </a>
									</div>

							</div>
						</div>
					</div>
					</div>
				<% } %>
				<% previous_id = user_profile.id; %>
				<% } %>
				</div>
				<% } %>

			<% if (filter_user) { %>
			<% for (filter_user of filter_user) { %>
			<% if (filter_user.id !== previous_id &&  filter_user.picture && filter_user.id !== myid && (filter_user.gender === match_g || match_g === "all")) { %>
				<div class="four wide column">
					<div class="ui link cards">
						
						<div class="card">
							<% if (filter_user.picture) { %>
								<div class="image profile">
									<img id="image_profile" src="/assets/images/user_image/<%= filter_user.picture %>">
								</div>
							<% } %>
							<div class="content">
								<a class="header" href="/show/<%= filter_user.id %>">
								<i class="<%= filter_user.gender %> icon"></i>
								<%= filter_user.pseudo %>
								</a>
								<div class="meta">
									<% if (  filter_user.age ) { %>
										<span class="date"><%= filter_user.age %> ans</span>
									<% } %>
								</div>
								<div class="description">
									<%= filter_user.bio %>
								</div>
							</div>
							<div class="extra content">
								<div class="ui divided items">
									<% if (  filter_user.city ) { %>
										<a>
										<i class="marker icon"></i>
										<%= filter_user.city %>
										</a>
									<% } %>
									<br/>
									<% if (filter_user.isconnected == 1) { %>
									<div class="item">
										<p><i class="green circle icon"></i>En ligne</p>
									</div>
									<% } %>
									<% if (filter_user.isconnected == 0) { %>
									<div class="item">
										<p><i class="red circle icon"></i>Hors ligne</p>
									</div>
									<% } %>
									<a > Popularité: <%= filter_user.populaire %> </a>
									
									</div>
							</div>
						</div>
					</div>
					</div>
				<% } %>
				<% previous_id = filter_user.id; %>
				<% } %>
				<% } %>

							<% if (users) { %>
			<% for (users of users) { %>
			<% if (users.id !== previous_id &&  users.picture && users.id !== myid && (users.gender === match_g || match_g === "all")) { %>
				<div class="four wide column">
					<div class="ui link cards">
						
						<div class="card">
							<% if (users.picture) { %>
								<div class="image profile">
									<img id="image_profile" src="/assets/images/user_image/<%= users.picture %>">
								</div>
							<% } %>
							<div class="content">
								<a class="header" href="/show/<%= users.id %>">
								<i class="<%= users.gender %> icon"></i>
								<%= users.pseudo %>
								</a>
								<div class="meta">
									<% if (  users.age ) { %>
										<span class="date"><%= users.age %> ans</span>
									<% } %>
								</div>
								<div class="description">
									<%= users.bio %>
								</div>
							</div>
							<div class="extra content">
								<div class="ui divided items">
									<% if (  users.city ) { %>
										<a>
										<i class="marker icon"></i>
										<%= users.city %>
										</a>
									<% } %>
									<br/>
									<% if (users.isconnected == 1) { %>
									<div class="item">
										<p><i class="green circle icon"></i>En ligne</p>
									</div>
									<% } %>
									<% if (users.isconnected == 0) { %>
									<div class="item">
										<p><i class="red circle icon"></i>Hors ligne</p>
									</div>
									<% } %>
									<a > Popularité: <%= users.populaire %> </a>
									
									</div>
							</div>
						</div>
					</div>
					</div>
				<% } %>
				<% previous_id = users.id; %>
				<% } %>
				<% } %>
		</div>
</div>



<% include footer %>

