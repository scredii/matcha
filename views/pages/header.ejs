	<script type="text/javascript">
		function get_notif()
		{
			$.getJSON("/notif/api", function (data) {
				$('#notif').text(data.unread);
			});
		}
		get_notif();
		setInterval(get_notif, 8500);
	</script>
	<style>
		.ui.vertical.menu
		{
			margin-top: 13px;
		}
		#buttonpad
		{
			margin-bottom: 20px;
		}
		footer
		{
			position: fixed;
			bottom: 0pt;
			left: 0pt;
		}
		.ui.card
		{
			width: 20em;
		}
		.ui.small.basic.icon.buttons
		{
			border: none !important;
		}
