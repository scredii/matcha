<% include header %>
	<div class="ui segment">
		<center>
		<% if (user[0]) { %>
			<h2 >
				<span><%= user[0].name %> <%= user[0].lastname %></span>
				<div class="sub header"> Alias: <%= user[0].pseudo %></div>
			</h2>
			<div class="ui  clearing divider"></div>
			<% if (pp[0]) { %>
				<div class="ui two column middle aligned very relaxed stackable grid">
		  			<div class="column">
						<div class="ui card">
							<div class="image">
								<img src="/assets/images/user_image/<%= pp[0].picture %>">
							</div>
			<% } %>
							<div class="content">
								<a class="header">
										<i class="<%= user[0].gender %> icon"></i>
										<%= user[0].pseudo %>
								</a>
								<div class="meta">
								<% if (  user[0].age !== null ) { %>
									<span class="date"><%= user[0].age %> ans</span>
								<% } %>


								<% if (  user[0].match_g === "male" && user[0].gender === "male") { %>
								<br/>
								<span class="date">Orientation: <i class="gay icon"></i></span>
								<% } %>

								<% if (  user[0].match_g === "female" && user[0].gender === "male") { %>
								<br/>
								<span class="date">Orientation: <i class="heterosexual icon"></i></span>
								<% } %>

								<% if (  user[0].match_g === "all" && user[0].gender === "male") { %>
								<br/>
								<span class="date">Orientation: <i class="intergender icon"></i></span>
								<% } %>


								<% if (  user[0].match_g === "male" && user[0].gender === "female") { %>
								<br/>
								<span class="date">Orientation: <i class="heterosexual icon"></i></span>
								<% } %>

								<% if (  user[0].match_g === "female" && user[0].gender === "female") { %>
								<br/>
								<span class="date">Orientation: <i class="lesbian icon"></i></span>
								<% } %>

								<% if (  user[0].match_g === "all" && user[0].gender === "female") { %>
								<br/>
								<span class="date">Orientation: <i class="intergender icon"></i></span>
								<% } %>




								</div>
								<div class="ui  clearing divider"></div>
								<div class="description">
									<%= user[0].bio %>
							<% if (  pop[0] ) { %>
							<br/>
									<strong>Popularité: <%= pop[0].count %></strong>

							<% } %>

								</div>
							</div>
							<% if (  user[0].city ) { %>
							<div class="extra content">
								<a>
									<i class="marker icon"></i>
									<%= user[0].city %>
								</a>
							<% } %>
							</div>
						</div>

		<!--</div>-->
</div>

		<% if (hashtag.length !== 0) { %>
		<div class="ui divided items">
			<div class="item">
		<span>Hashtag:</span>
		
		<div class="field">
		<br />
			

		<% for (hashtag of hashtag) { %>
		<a class="ui teal label"> <%= hashtag.hashtag %> </a>
			<% } %>
		</div>
			</div>
			<% } %>
			<div class="item">
		<span>Localisation:</span>
		<div class="field">
		<br />
			<% if (  user[0].city ) { %>
			<a>
			<i class="marker icon"></i>
			<%= user[0].city %> ( <%= diff %> km de toi)
			</a>
			<% } %>
			<% if (user[0].isconnected == 1) { %>
			<div class="item">
				<p><i class="green circle icon"></i>En ligne</p>
			</div>
			<% } %>
			<% if (user[0].isconnected == 0) { %>
			<div class="item">
				<p><i class="red circle icon"></i>Hors ligne </p>
			(Derniere co: <%= lastco.fromNow() %>)
			</div>
			<% } %>
			<% if (match[0]) { %>
			<% if (match[0].user_like == user[0].id) { %>
			<div class="meta">
				<p>Vous liké cet utilisateur</p>
			</div>
			<% } %>
			<% } %>
			<% if (match2[0]) { %>
			<% if (match2[0].user_like == user[0].myid) { %>
			<div class="meta">
				<p>Cet utilisateur vous a liké </p>
			</div>
			<% } %>
			<% } %>
			<% if (mutual[0]) { %>
			<% if (mutual[0].user_like == user[0].myid && mutual[0].by_id == user[0].id) { %>
			<div class="meta">
				<p>Vous vous liké mutuellement <i class="heart red icon"></i></p>
				
			</div>
			<% } %>
			<% } %>
		</div>
		</div>
					<% if (picture) {  %>
					<div class="ui medium bordered image ">
						<div class="ui grid ">
						<% for (picture of picture) { %>
						<!--<div class="four wide column">-->
							<div class="ui tiny images">
								<img class="ui image" src="/assets/images/user_image/<%= picture.picture %>">
							</div>
						<% } %>
					</div>
				</div>
			</div>
			<% } %>
			</div>
			<div class="ui  clearing divider"></div>
			<center>
				<form method="post">
				<input type="hidden" type="text" name="userid" value="<%= user[0].id %>" >
				<input type="hidden" name="myid" value="<%= user[0].myid %>">
				<button value="report" name="form" type="submit" class="ui orange inverted labeled submit icon button">
					<i class="frown icon"></i>Signaler
				</button>
				<button value="block" name="form" type="submit" class="ui blue inverted labeled submit icon button">
					<i class="minus circle icon"></i>Bloquer
				</button>
				<button value="match" name="form" type="submit" class="ui red inverted labeled submit icon button">
					<i class="heart icon"></i>Match!
				</button>
				<button value="unmatch" name="form" type="submit" class="ui blue inverted  labeled submit icon button">
								<i class="remove circle icon"></i> Supprimer Match!
				</button>
				</form>
			<center>
			<% } %>
				
					<!--<button value="modif" name="form" type="submit" class="ui blue labeled submit icon button">
				<i class="icon edit"></i>Mettre a jour
			</button>-->
			<% if (!user[0]) { %>
			<p> Utilisateur inconnu </p>
		<% } %>
		</center>
		
	</div>
<% include footer %>